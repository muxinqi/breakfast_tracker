<div id="<%= dom_id(user) %>" class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <div class="text-base font-semibold leading-7 tracking-tight text-gray-900">
    <%= user.name %>
  </div>
  <p class="mb-6 font-normal text-gray-500 dark:text-gray-400">
    早餐一共吃了 x 个鸡蛋，y 根玉米
  </p>
  <div class="inline-flex items-center text-gray-500">
    今天想吃
  </div>
  <div class="mt-3 flex items-center justify-between">
    <span class="text-3xl font-bold text-gray-900 dark:text-white">
      🥚鸡蛋 <%= user.egg_count %> 个
    </span>
    <div class="flex gap-x-4">
<!--      <div class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">-->
        <%= button_to "-", decrease_egg_count_user_path(user), method: :patch, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
<!--      </div>-->
      <div class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <%= button_to "+", increase_egg_count_user_path(user), method: :patch %>
      </div>
    </div>
  </div>
  <div class="mt-3 flex items-center justify-between">
    <span class="text-3xl font-bold text-gray-900 dark:text-white">
      🌽玉米 <%= user.corn_count %> 根
    </span>
    <div class="flex gap-x-4">
      <div class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <%= button_to "-", decrease_corn_count_user_path(user), method: :patch %>
      </div>
      <div class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <%= button_to "+", increase_corn_count_user_path(user), method: :patch %>
      </div>
    </div>
  </div>
</div>
