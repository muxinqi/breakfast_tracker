<%= turbo_stream_from "home#index" %>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>今天一共要煮</h1>
<h2>🥚鸡蛋 <%= @total_eggs %> 个</h2>
<h2>🌽玉米 <%= @total_corn %> 根</h2>

<br>

<table>
  <thead>
  <tr>
    <th>昵称</th>
    <th>🥚鸡蛋</th>
    <th>🌽玉米</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td>
        <%= user.egg_count %>
        <%= button_to "+", increase_egg_count_user_path(user), method: :patch %>
        <%= button_to "-", decrease_egg_count_user_path(user), method: :patch %>
      </td>
      <td>
        <%= user.corn_count %>
        <%= button_to "+", increase_corn_count_user_path(user), method: :patch %>
        <%= button_to "-", decrease_corn_count_user_path(user), method: :patch %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "添加新用户", new_user_path %>
